@model Category
<div class="card shadow border-0 mt-4">
  <div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Delete Category</h2>
        </div>
  <div class="card-body p-4">
                <form method="post" class="row">
                    <input asp-for="ID" hidden />
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-floating  col-12 py-2">
                        <input asp-for="Name" disabled class="form-control border-0 shadow" />
                        <lable value="Category Name" class="ms-2"></lable>
                    </div>
                    <div class="form-floating col-12 py-2">
                        <input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" />
                        <lable asp-for="DisplayOrder" class="ms-2"></lable>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button class="btn btn-danger  form-control" type="submit">Delete</button>
                        </div>
                        <div class="col-6  col-md-3">
                            <a class="btn btn-outline-Primary form-control border" asp-controller="Category" asp-action="Index">Back To List</a>
                        </div>
                    </div>
                </form>
 </div>
 </div>
</div>
</div>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}





