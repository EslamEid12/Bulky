@page
@model BulkyWebRazor_Temp.Pages.Categories.EditModel
<form method="post">
    <input asp-for="Category.ID" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row p-1">
            <lable class="p-0" asp-for="Name"></lable>
            <input type="text" asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <lable class="p-0" asp-for="DisplayOrder"></lable>
            <input type="text" asp-for="Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button class="btn btn-primary form-control" type="submit">Edit</button>
            </div>
            <div class="col-6  col-md-3">
                <a class="btn btn-secondary form-control border" asp-page="/categories/index">Back To List</a>
            </div>
        </div>
    </div>
</form>
@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
